<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/someGrey">

    <org.duncavage.swipetorefresh.widget.SwipeRefreshLayout
        android:id="@+id/notificationSwipeRefreshLayout" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView android:id="@+id/notificationListView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/activity_horizontal_margin"
            android:padding="@dimen/activity_horizontal_margin" />

    </org.duncavage.swipetorefresh.widget.SwipeRefreshLayout>
</RelativeLayout>